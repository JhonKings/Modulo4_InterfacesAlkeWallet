<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.FragmentRequestMoney_7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="102dp">

        <ImageView
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/status_bar"/>

        <ImageView
            android:id="@+id/imgArrowBack"
            android:layout_width="14dp"
            android:layout_height="11dp"
            android:layout_below="@+id/status_bar"
            android:background="@drawable/arrow_left"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/status_bar"
            android:layout_marginTop="-1dp"
            android:height="30dp"
            android:fontFamily="@font/jua_regular"
            android:gravity="center"
            android:lineHeight="30px"
            android:text="ingresar Dinero"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="0dp"
        android:layout_height="3px"
        android:background="@drawable/divider"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="105dp" />

    <RelativeLayout
        android:layout_width="192dp"
        android:layout_height="60dp"
        android:layout_marginBottom="544dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/imageView8"
        app:layout_constraintHorizontal_bias="0.178"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.027"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/profile_picture_reem"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="460dp" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="69dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="54dp"
            android:layout_marginBottom="33dp"
            android:fontFamily="@font/jua_regular"
            android:text="Reem Khale"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="123dp"
            android:layout_height="17dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="69dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/jua_regular"
            android:text="reem1993@gmail.com"
            android:textColor="#80000000"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="85dp"
        android:layout_marginBottom="440dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.155">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/jua_regular"
            android:text="Cantidad a Ingresar"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/editTextTextEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@+id/textView_email"
            android:background="@drawable/shape_blue"
            android:ems="10"
            android:hint="20.00"
            android:layout_marginLeft="15dp"
            android:textColorHint="@color/blue"
            android:textStyle="bold"
            android:fontFamily="@font/jua_regular"
            android:textSize="14dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="230dp"
        android:layout_marginBottom="188dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.365">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/jua_regular"
            android:text="Notas de transferencia"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="345dp"
            android:layout_height="200dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="321dp"
                android:layout_height="200dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"
                android:alpha="0.25"
                android:fontFamily="@font/jua_regular"
                android:gravity="top"
                android:hint="Agregar notas de transferencia (opcional)"
                android:inputType="textMultiLine"
                android:textSize="14sp"
                android:translationY="-1.75sp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/buttonAzul"
        android:layout_width="314dp"
        android:layout_height="49dp"
        android:background="@drawable/shape_blue2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.967">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/jua_regular"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="115dp"
            android:text="Ingresar Dinero"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/logoIngreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="90dp"
            android:background="@drawable/arrow_down"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>